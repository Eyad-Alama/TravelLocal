<h1>Listing trips</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Cover image</th>
      <th>Price per person</th>
      <th>Number of people</th>
      <th>Duration</th>
      <th>Highlights</th>
      <th>Includes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.title %></td>
        <td><%= trip.description %></td>
        <td><%= trip.cover_image %></td>
        <td><%= trip.price_per_person %></td>
        <td><%= trip.number_of_people %></td>
        <td><%= trip.duration %></td>
        <td><%= trip.highlights %></td>
        <td><%= trip.includes %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

